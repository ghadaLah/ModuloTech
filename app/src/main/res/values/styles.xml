<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ModuloTech.Light" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="TextViewTitle" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="paddingStart">@dimen/margin_10</item>
        <item name="paddingEnd">@dimen/margin_10</item>
        <item name="android:paddingTop">@dimen/margin_10</item>
        <item name="android:paddingBottom">@dimen/margin_10</item>
    </style>

    <style name="InputOutlinedText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:bottomLeftRadius">@dimen/margin_20</item>
        <item name="android:bottomRightRadius">@dimen/margin_20</item>
        <item name="android:topRightRadius">@dimen/margin_20</item>
        <item name="android:topLeftRadius">@dimen/margin_20</item>
        <item name="borderWidth">2dp</item>
        <item name="android:layout_margin">@dimen/margin_10</item>
    </style>

</resources>